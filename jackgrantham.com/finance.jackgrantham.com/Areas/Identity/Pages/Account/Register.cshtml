@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <h2 class="fw-bold mb-5 text-uppercase">Register</h2>

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group mb-4">
                                    <div class="form-outline form-white">
                                        <input type="email" asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Email" class="form-label"></label>
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger validation"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <div class="form-outline form-white">
                                        <input type="password" asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                        <label asp-for="Input.Password" class="form-label"></label>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger validation"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <div class="form-outline form-white">
                                        <input type="password" asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                    </div>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger validation"></span>
                                </div>

                                <button id="registerSubmit" type="submit" class="btn btn-outline-light btn-lg px-5">Register</button>

                                @*<div>
                                    <p class="mb-0">Didn't recieve an email? <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">resend</a></p>
                                </div>*@

                            </form>

                            @*<div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                                </div>*@

                        </div>

                        <div>
                            <p class="mb-0">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log In</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />

<script type="text/javascript">

    $(document).ready(function ()
    {
        $('header').empty();
        $('footer').empty();
    });

</script>
}
