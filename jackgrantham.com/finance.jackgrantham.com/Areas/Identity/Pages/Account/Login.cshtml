@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <form id="account" method="post">

                                <h2 class="fw-bold mb-5 text-uppercase">Log in</h2>

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group mb-4">
                                    <div class="form-outline form-white">
                                        <input id="typeEmailX" asp-for="Input.Email" type="email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                    </div>
                                    <span asp-validation-for="Input.Email" class="text-danger validation"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <div class="form-outline form-white">
                                        <input type="password" asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger validation"></span>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a></p>

                                <button id="login-submit" type="submit" class="btn btn-outline-light btn-lg px-5">Login</button>

                            </form>

                            @*<div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                                </div>*@

                        </div>

                        <div>
                            <p class="mb-0">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />

<script type="text/javascript">

    $(document).ready(function ()
    {
        $('header').empty();
        $('footer').empty();
    });

</script>

}
